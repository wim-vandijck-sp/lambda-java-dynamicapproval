<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.amazonaws.services.lambda.runtime.log4j2">
  <Appenders>
    <Lambda name="Lambda">
      <PatternLayout>
          <pattern>%-5p %c{1}:%L - %m%n</pattern>
      </PatternLayout>
    </Lambda>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="Lambda" />
    </Root>
    <Logger name="com.amazonaws=WARN" level="DEBUG" />
  </Loggers>
</Configuration>
